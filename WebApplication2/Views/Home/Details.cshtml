@model WebApplication2.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>

<table>
    @foreach (var item in Model.Images)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td><img src="@item.Location" alt="Alternate Text" />  </td>
        </tr>
    }
</table>
    <form asp-action="Details" method="post">

        <input type="hidden" id="custId" name="id" value="@Model.ProductId">

        <div>تعداد </div>

        <div>
            <input type="text" name="count" value="@ViewData["AlreadyOrderedCount"].ToString()" />
        </div>
        <div>
            <input type="submit" value="افزودن به سبد خرید" />
        </div>
    </form>


    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
